{
  "manifest_version": 3,
  "name": "简历筛选助手",
  "version": "1.0.0",
  "description": "帮助用户在招聘网站快速筛选符合条件的简历",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.zhipin.com/*",
    "https://*.boss.com/*",
    "https://*.58.com/*",
    "https://*.liepin.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.zhipin.com/*",
        "https://*.boss.com/*",
        "https://*.58.com/*",
        "https://*.liepin.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

